{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "lib",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts",  "**/*.test.ts", "**/__tests__/**/*"]
}
